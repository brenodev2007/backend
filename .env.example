DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=sua-senha-aqui
DATABASE_NAME=crm_estoka

JWT_SECRET=sua-chave-secreta-aqui
PORT=3001

# Environment Mode: 'development' (sandbox) ou 'production' (real)
# Mude para 'production' quando for usar em produção real
NODE_ENV=development

# Mercado Pago - DESENVOLVIMENTO (Sandbox/Teste)
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers/panel
# Ative o modo "Teste" e copie as credenciais
MP_DEV_ACCESS_TOKEN=TEST-sua-chave-de-teste-aqui
MP_DEV_PUBLIC_KEY=TEST-sua-public-key-de-teste-aqui

# Mercado Pago - PRODUÇÃO (Real)
# Ative o modo "Produção" no painel e copie as credenciais
MP_PROD_ACCESS_TOKEN=APP_USR-sua-chave-de-producao-aqui
MP_PROD_PUBLIC_KEY=APP_USR-sua-public-key-de-producao-aqui
MP_PROD_CLIENT_ID=seu-client-id-aqui

# URLs
FRONTEND_URL=http://localhost:5173

# Webhook URL - Atualizar quando tiver domínio em produção
# Para testes locais, use ngrok: https://ngrok.com
# Exemplo: WEBHOOK_URL=https://seu-dominio.ngrok.app/api/payments/webhook
# WEBHOOK_URL=https://seudominio.com/api/payments/webhook
